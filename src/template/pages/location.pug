            //+e.item.expand-list__item.is-hidden
            //  +e.item-img.img-hover
            //    +e.IMG(src=`static/img/benefits_6.jpg` alt='image')
            //  +e.H5 Использование оргтехники
            //
            //+e.item.expand-list__item.is-hidden
            //  +e.item-img.img-hover
            //    +e.IMG(src=`static/img/benefits_1.jpg` alt='image')
            //  +e.H5 Kухня

          //+b.BUTTON.expand-list__btn.btn._line._line-white(type='button') хочу еще
        //end benefits

    //begin block-6
    +b.SECTION.block-6._location.desk-only
      .container.container_md
        +e.top.block-top._has-hanging
          +e.label.block-label
            +e.P prices
          +e.title.block-title.has-selection._green
            +e.H2
              b Тарифы
              = ' '
              | локации

        +e.list._more-items.mobile-slider._white
          -
            block6List = [{
            title: 'Место в лаунж зоне',
            img: 1,
            descr: 'Свободное атмосферное место в зоне общего пользования.'
            }, {
            title: 'Hot desk',
            img: 2,
            descr: 'Свободное рабочее место в open space. Идеально подойдет для тех, кто не любит сидеть на одном месте.'
            }, {
            title: 'Desk priority',
            img: 3,
            descr: 'Персональное рабочее место в open space. Для тех, кто любит создавать свое рабочее место.'
            }, {
            title: 'Место в лаунж зоне',
            img: 4,
            descr: 'Свободное атмосферное место в зоне общего пользования.'
            }, {
            title: 'Бесплатный день',
            img: 5,
            descr: 'У нас есть пробный бесплатный день. Приходи и приятно удивись сам!'
            }]
          mixin block6Item(item)
            +e.item
              +e.item-mask
              +e.item-img.img-hover
                +e.IMG(src=`static/img/block-6_${item.img}.jpg` alt='image')
              +e.item-text
                +e.item-title.h4
                  +e.H4= item.title
                +e.P= item.descr
                +e.price._item
                  +e.H5 Стоимость от:
                    span 200$
                +e.BUTTON.item-btn.btn._green(type='button' data-popup-target='enrollPopup')
                  span.btn__text забронировать
          each item in block6List
            +block6Item(item)
