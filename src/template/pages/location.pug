extends ../extend/default

block variables
  - var title = 'Location page';
  - var locationMap = true;
  - var footer = {classMod: '_entry'};

block main
  main.content(data-page='location')

    -
      screen = {
      classMod: '_location',
      title: 'Workit на Нивках',
      subTitle: 'Невероятно уютное пространство по адресу улица Щербакова 2',
      maskType: 'image',
      maskImg: '7',
      maskBlur: '8',
      maskImgOpacity: '0.9'
      }
    include ../sections/screen

    //begin block-3
    +b.SECTION.block-3._photos
      +e.container.container
        +e.top.block-top.block-top_md
          +e.label.block-label
            +e.P networking
          +e.title.block-title.has-selection._green
            +e.H2 Workit
              b это сеть
              = ' '
              | пространства для работы
          +e.sub-title.block-sub-title
            +e.H5
              b Создавайте
              = ' '
              | у нас  фантастические продукты,
              b знакомтесь
              = ' '
              | с новыми людьми, находите
              b клиентов
              = ' '
              | и
              b друзей,
              = ' '
              | мы предлагаем
              b идеальное место
              = ' '
              | для совместной работы

        +e.photos._slider-tablet.mobile-slider._white
          +e.photos-wrap._1.img-hover(data-anim='fade-left' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-1.jpg)')
          +e.photos-wrap._2.img-hover(data-anim='fade-right' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-2.jpg)')

          +e.photos-wrap._3.img-hover(data-anim='fade-left' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-3.jpg)')
          +e.photos-wrap._4.img-hover(data-anim='fade-right' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-4.jpg)')

          +e.photos-wrap._5.img-hover(data-anim='fade-left' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-1.jpg)')
          +e.photos-wrap._6.img-hover(data-anim='fade-right' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-2.jpg)')

        +e.lines
          +e.line._left
          +e.line._right
    //end block-3

    //begin benefits
    +b.SECTION.benefits.desk-only
      +e.container.container
        +e.top.block-top
          +e.label.block-label
            +e.P consist of
          +e.title.block-title.has-selection._black
            +e.H2
              b Преимущества
              = ' '
              | локации

        +e.content.expand-list.js-expand-list
          .expand-list__inner
            -
              benefitsList = [
              'Отдых в парке',
              'Кафе в здании',
              'Гамаки и фрисби',
              'Велопарковка'
              ]
            for benefitsItemText, index in benefitsList
              +e.item.expand-list__item
                +e.item-img.img-hover
                  +e.IMG(src=`static/img/benefits_${index + 13}.jpg` alt='image')
                +e.H5= benefitsItemText

            //+e.item.expand-list__item.is-hidden
            //  +e.item-img.img-hover
            //    +e.IMG(src=`static/img/benefits_2.jpg` alt='image')
