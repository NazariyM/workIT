extends ../extend/default

block variables
  - var title = 'Location page';
  - var locationMap = true;
  - var footer = {classMod: '_entry'};

block main
  main.content(data-page='location')

    -
      screen = {
      classMod: '_location',
      title: 'Workit на Нивках',
      subTitle: 'Невероятно уютное пространство по адресу улица Щербакова 2',
      maskType: 'image',
      maskImg: '6',
      maskBlur: '8',
      maskImgOpacity: '0.9'
      }
    include ../sections/screen

    //begin block-3
    +b.SECTION.block-3._location
      +e.container.container
        +e.inner
          +e.col
            +e.top.block-top.block-top_md
              +e.label.block-label
                +e.P networking
              +e.title.block-title.has-selection._green
                +e.H2 Workit
                  b это сеть
                  = ' '
                  | пространства для работы
              +e.sub-title.block-sub-title
                +e.H5
                  b Создавайте
                  = ' '
                  | у нас  фантастические продукты,
                  b знакомтесь
                  = ' '
                  | с новыми людьми, находите
                  b клиентов
                  = ' '
                  | и
                  b друзей,
                  = ' '
                  | мы предлагаем
                  b идеальное место
                  = ' '
                  | для совместной работы
                  b Создавайте
                  = ' '
                  | у нас  фантастические продукты,
                  b знакомтесь
                  = ' '
                  | с новыми людьми, находите
                  b клиентов
                  = ' '
                  | и
                  b друзей,
                  = ' '
                  | мы предлагаем
                  b идеальное место
                  = ' '
                  | для совместной работы

            +b.info-cards.block-3__info-cards.mobile-slider._white(data-items-anim='fade-left')
              -
                infoCardList = [
                  '2000 кв м',
                  'Террасы и BBQ',
                  'Отдых в парке рядом с озерером',
                  'паркинг для велосипедов',
                  'турники, гамаки, фрисби',
                  'кафе в здании для встреч за обедом и кофе'
                ]

              for infoCardText in infoCardList
                +e.item
                  +e.P= infoCardText

          +b.offer.block-3__col
            +e.pic.img-hover(data-anim='fade-left')
              +e.IMG(src='static/img/offer-block_img.jpg' alt='image')
            +e.inner(data-items-anim='fade-left')
              +e.title.h4
                +e.H4 Особняк  в парке
              +e.P г. Киев, ул. Щербакова 2
              +e.contacts
                +e.contacts-col
                  +e.P
                    b Приходите в гости:
                    | наш адрес на
                    +b.A.link-green._underlined(href='#!') гугл карте

                  -socials = {classMod: '_contacts'}
                  include ../components/socials

                +e.contacts-col
                  +e.P
                    b Контакты администратора:
                    +e.A(href='#!') +38 (050) 687 48-90
                    +b.A.link-green(href='#!') info@workit.space

              +e.persons-wrap
                +e.person
                  +e.person-photo
                    +e.IMG(src='static/img/person-1.jpg' alt='image')
                  +e.person-info
                    +e.person-name.h5
                      +e.H5 Марта Любимова
                    +e.P Главный администратор
                +e.person
                  +e.person-photo
                    +e.IMG(src='static/img/person-2.jpg' alt='image')
                  +e.person-info
                    +e.person-name.h5
                      +e.H5 Евгения Булгакова
                    +e.P Главный администратор

              +e.BUTTON.btn.btn._green(type='button' data-popup-target='comePopup')
                span.btn__text Прийти в гости


        +e.photos._slider-mob.mobile-slider._white
          +e.photos-wrap._1.img-hover(data-anim='fade-left' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-1.jpg)')
          +e.photos-wrap._2.img-hover(data-anim='fade-right' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-2.jpg)')

          +e.photos-wrap._3.img-hover(data-anim='fade-left' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-3.jpg)')
          +e.photos-wrap._4.img-hover(data-anim='fade-right' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-4.jpg)')

          +e.photos-wrap._5.img-hover(data-anim='fade-left' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-1.jpg)')
          +e.photos-wrap._6.img-hover(data-anim='fade-right' data-anim-duration='1')
            +e.photos-img.img-hover__item(style='background-image: url(static/img/block-3_photo-2.jpg)')

        +e.lines
          +e.line._left
          +e.line._right
    //end block-3

    //begin benefits
    +b.SECTION.benefits._default
      +e.container.container
        +e.top.block-top
          +e.label.block-label
            +e.P consist of
          +e.title.block-title.has-selection._black
            +e.H2
              b Преимущества
              = ' '
              | локации

        +e.content.expand-list.js-expand-list
          .expand-list__inner.benefits__content-inner.mobile-slider.mobile-slider_green
            -
              benefitsList = [
              'Отдых в парке',
              'Кафе в здании',
              'Гамаки и фрисби',
              'Велопарковка'
              ]
            for benefitsItemText, index in benefitsList
              +e.item.expand-list__item
                +e.item-img.img-hover
                  +e.IMG(src=`static/img/benefits_${index + 13}.jpg` alt='image')
                +e.H5= benefitsItemText

    //begin block-6
    +b.SECTION.block-6._location-has-slider
      .container.container_md
        +e.top.block-top._has-hanging
          +e.label.block-label
            +e.P prices
          +e.title.block-title.has-selection._green
            +e.H2
              b Тарифы
              = ' '
              | локации


        +e.list._more-items.mobile-slider._white
          -
            block6List = [{
            title: 'Место в лаунж зоне',
            img: 1,
            descr: 'Свободное атмосферное место в зоне общего пользования.'
            }, {
            title: 'Hot desk',
            img: 2,
            descr: 'Свободное рабочее место в open space. Идеально подойдет для тех, кто не любит сидеть на одном месте.'
            }, {
            title: 'Desk priority',
            img: 3,
            descr: 'Персональное рабочее место в open space. Для тех, кто любит создавать свое рабочее место.'
            }, {
            title: 'Место в лаунж зоне',
            img: 4,
            descr: 'Свободное атмосферное место в зоне общего пользования.'
            }, {
            title: 'Бесплатный день',
            img: 5,
            descr: 'У нас есть пробный бесплатный день. Приходи и приятно удивись сам!'
            }]
          mixin block6Item(item)
            +e.item
              +e.item-mask
              +e.item-img.img-hover
                +e.IMG(src=`static/img/block-6_${item.img}.jpg` alt='image')
              +e.item-text
                +e.item-title.h4
                  +e.H4= item.title
                +e.P= item.descr
                +e.price._item
                  +e.H5 Стоимость от:
                    span 200$
                +e.BUTTON.item-btn.btn._green(type='button' data-popup-target='enrollPopup')
                  span.btn__text забронировать
          each item in block6List
            +block6Item(item)

        +b.slider._has-nav-vertical.block-6__slider(data-anim='fade-left' data-anim-duration='1' data-anim-delay='.5')
          +e.body
            +e.item.img-hover
              +e.IMG(src='static/img/block-6_sld-1.jpg' alt='image')
            +e.item.img-hover
              +e.IMG(src='static/img/block-3_4.jpg' alt='image')
            +e.item.img-hover
              +e.IMG(src='static/img/block-3_7.jpg' alt='image')
            +e.item.img-hover
              +e.IMG(src='static/img/block-6_offer.jpg' alt='image')
            +e.item.img-hover
              +e.IMG(src='static/img/block-3_4.jpg' alt='image')

          +e.controls(data-anim='fade-left')
            +e.buttons
            +e.count
              +e.SPAN.count-current
              +e.count-decor
              +e.SPAN.count-all

          +e.nav
            +e.nav-item
              +e.IMG(src='static/img/block-6_sld-2.jpg' alt='image')
            +e.nav-item
              +e.IMG(src='static/img/block-6_sld-3.jpg' alt='image')
            +e.nav-item
              +e.IMG(src='static/img/block-6_sld-4.jpg' alt='image')
            +e.nav-item
              +e.IMG(src='static/img/block-6_sld-5.jpg' alt='image')
            +e.nav-item
              +e.IMG(src='static/img/block-6_sld-2.jpg' alt='image')
        //end block-6

    -come = {maskType: 'image', maskVideo: false}
    include ../sections/come

    include ../sections/locations

    -subscrClass = '_contacts'
    include ../sections/subscr